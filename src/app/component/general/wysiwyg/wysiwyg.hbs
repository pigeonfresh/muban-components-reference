<link rel="stylesheet" href="./wysiwyg.scss">

<{{#if type}}{{type}}{{else}}div{{/if}} class="wysiwyg{{#if class}} {{class}}{{/if}}">

  {{! Collection of Presets can be imported below }}
  {{#if (condition preset '===' 'all-elements')}}{{> preset/all-elements}}{{/if}}
  {{#if (condition preset '===' 'article')}}{{> preset/article}}{{/if}}

  {{! Add content (or append to the preset) }}
  {{#if content}}{{{content}}}{{/if}}

  {{! When no preset nor content is defined it will use the partial with all elements }}
  {{#unless (condition content '||' preset)}}{{> preset/default }}{{/unless}}

</{{#if type}}{{type}}{{else}}div{{/if}}>
